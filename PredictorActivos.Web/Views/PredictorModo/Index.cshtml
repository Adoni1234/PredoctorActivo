@model PredictorActivos.ViewModel.PredictionModoViewModel
@{
    ViewData["Title"] = "Estrategia de Predicción";
}

<div class="row justify-content-center">
    <div class="col-lg-7">

        <div class="text-center mb-4">
            <h2 class="fw-bold">Estrategia de Análisis</h2>
            <p class="text-muted">
                Define cómo el sistema interpretará el comportamiento del activo.
            </p>
        </div>

        <div class="card shadow border-0">
            <div class="card-body p-4">

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">
                        @Model.SuccessMessage
                    </div>
                }

                <form method="post">
                    <label class="fw-bold mb-2">
                        Método de predicción
                    </label>

                    <select asp-for="SelectedModo"
                            asp-items="Model.ModosAvailable"
                            class="form-select form-select-lg mb-4">
                    </select>

                    <div class="text-center">
                        <button class="btn btn-success btn-lg me-3">
                            Guardar
                        </button>
                        <a asp-controller="Predictor" asp-action="Index"
                           class="btn btn-outline-primary btn-lg">
                            Volver
                        </a>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>
