@model PredictorActivos.ViewModel.ActivoDataViewModel
@{
    ViewData["Title"] = "Predicción de Activos";
}

<div class="row justify-content-center">
    <div class="col-xl-9">

        <div class="text-center mb-4">
            <h1 class="fw-bold">
                <i class="fas fa-brain me-2 text-primary"></i>
                Análisis Predictivo de Activos
            </h1>
            <p class="text-muted">
                Introduce el historial del activo y obtén una proyección clara del comportamiento futuro.
            </p>
        </div>

        <div class="card shadow-lg border-0">
            <div class="card-body p-4">

                <form asp-action="Index" method="post" id="predictionForm">
                    <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                    <!-- Selección de método -->
                    <div class="mb-4">
                        <label class="fw-bold mb-2 d-block">
                            ¿Cómo deseas ingresar los datos?
                        </label>

                        <div class="form-check form-switch">
                            <input class="form-check-input"
                                   asp-for="UsoIndividualInput"
                                   id="inputToggle"
                                   onchange="toggleInputMethod()" />
                            <label class="form-check-label" for="inputToggle">
                                Ingreso manual guiado (día por día)
                            </label>
                        </div>
                    </div>

                    <!-- CSV -->
                    <div id="csvInput">
                        <label class="fw-bold mb-2">
                            Historial del activo (pegado rápido)
                        </label>
                        <p class="text-muted small">
                            Formato: <code>fecha, valor</code> — exactamente 20 registros.
                        </p>

                        <textarea asp-for="Data"
                                  class="form-control"
                                  rows="10"
                                  placeholder="2025-01-01, 150.25&#10;2025-01-02, 151.10&#10;..."></textarea>

                        <span asp-validation-for="Data" class="text-danger small"></span>
                    </div>

                    <!-- Manual -->
                    <div id="individualInputs" class="d-none">
                        <h5 class="fw-bold mb-3">
                            Ingreso manual del historial
                        </h5>

                        <div class="row">
                            @for (int i = 0; i < 20; i++)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="border rounded p-3 h-100">
                                        <div class="fw-bold text-primary mb-2">
                                            Día @(i + 1)
                                        </div>

                                        <input type="date"
                                               asp-for="IndividualInput[i].Fecha"
                                               class="form-control mb-2" />

                                        <input type="number"
                                               step="0.01"
                                               asp-for="IndividualInput[i].Valor"
                                               class="form-control"
                                               placeholder="Valor del activo" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="fas fa-magic me-2"></i>
                            Generar Predicción
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleInputMethod() {
            const manual = document.getElementById('inputToggle').checked;
            document.getElementById('csvInput').classList.toggle('d-none', manual);
            document.getElementById('individualInputs').classList.toggle('d-none', !manual);
        }
    </script>
}
